<h1>Posts</h1>


<%= month_calendar do |date| %>
    <%= date.day %>
  <% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Time</th>
      <th>End Time
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.posts.each do |post| %>
      <tr>
        <td><%= link_to post.name, post_path(post) %></td>
        <td><%= post.start_time %></td>
        <td><%= post.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>Click to view Posts by a specific Platform!</h2> 

<table>
  <thead>
    <tr>
      <th><%= link_to "Youtube", platforms_path %></th>
      <th><%= link_to "Twitter", platforms_path %> </th>
      <th><%= link_to "Instagram", platforms_path %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  </table>





