





<ul class="navbar"> 
    <li class="navitem"><a><%= link_to "Logout", logout_path %></a></li> 
    <li class="navitem"><a><%= link_to "Create a Post", new_post_path %></a></li>
</ul>



<div class="calendar">
<%= month_calendar events: @posts do |date, posts| %>
  <%= date.day %>

  <% posts.each do |post| %>
    <div>
      <%= post.name %>
    </div>
  <% end %>
<% end %>
</div>


<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Time</th>
      <th>End Time
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody id='posts'>
    <% current_user.posts.each do |post| %>
      <tr>
        <td><%= link_to post.name, post_path(post), class: 'ajaxShow', data: {id: post.id} %></td>
        <td><%= post.pretty_start %></td>
        <td><%= post.pretty_end %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<h2 style="text-align: center"> You have posted <%= @current_user.posts.length %> time(s) </h2>
<h2 style="margin-left: 50px; margin-top: 20px;">Click to view Posts by a specific Platform!</h2> 

<center style="margin-top: 20px;">

      <h2 style="margin-bottom: 10px;"><%= link_to "Youtube", platform_path(3) %></h2>
      <h2 style="margin-bottom: 10px;"><%= link_to "Twitter", platform_path(1) %> </h2>
      <h2><%= link_to "Instagram", platform_path(2) %> </h2>
    
</center>


<div id="published"></div> 
<div id="error"></div>



<div id='modalBtn' class='button'> </div> 
<div id='simpleModal' class='modal'>
    <div class='modal-content'>
      <span id='closeBtn'>&times;</span> 
        <div id='postData'>
          
        </div>
    </div>
</div> 

<button id="published-posts"> Published Posts </button> 
