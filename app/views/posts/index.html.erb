
<html> 
<head>
<link href='scaffolds.scss' rel='stylesheet'>
<ul class="navbar"> 
    <li class="navitem"><a><%= link_to "Logout", logout_path %></a></li> 
    <li class="navitem"><a><%= link_to "Published Posts", published_path %></a></li>
    <li class="navitem"><a><%= link_to "Create a Post", new_post_path %></a></li>
</ul>
</head>


<div class="calendar">
<%= month_calendar events: @posts do |date, posts| %>
  <%= date.day %>

  <% posts.each do |post| %>
    <div>
      <%= post.name %>
    </div>
  <% end %>
<% end %>
</div>
</html>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Time</th>
      <th>End Time
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% current_user.posts.each do |post| %>
      <tr>
        <td><%= link_to post.name, post_path(post) %></td>
        <td><%= post.start_time %></td>
        <td><%= post.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</table>


<br>


<h2>Click to view Posts by a specific Platform!</h2> 

<table>
  <thead>
    <tr>
      <th><%= link_to "Youtube", youtube_path %></th>
      <th><%= link_to "Twitter", twitter_path %> </th>
      <th><%= link_to "Instagram", instagram_path %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  </table>




